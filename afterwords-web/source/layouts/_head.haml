%head
    %meta{ :charset => "utf-8" }/
    
    -# Always force latest IE rendering engine (even in intranet) & Chrome Frame
    -# Remove this if you use the .htaccess
    %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
    
    %title= page_title
    %meta{:content => page_description, :name => "description"}

    = stylesheet_link_tag "foundation-style/globals.css"
    = stylesheet_link_tag "foundation-style/typography.css"
    = stylesheet_link_tag "foundation-style/grid.css"
    = stylesheet_link_tag "foundation-style/ui.css"
    = stylesheet_link_tag "foundation-style/buttons.css"
    = stylesheet_link_tag "foundation-style/tabs.css"
    = stylesheet_link_tag "foundation-style/navbar.css"
    = stylesheet_link_tag "foundation-style/forms.css"
    = stylesheet_link_tag "foundation-style/orbit.css"
    = stylesheet_link_tag "foundation-style/reveal.css"
    = stylesheet_link_tag "app.css"
    = javascript_include_tag "foundation/modernizr.foundation.js"
      
    /  IE Fix for HTML5 Tags
    <!--[if lt IE 9]>
    %script{ :src => "http://html5shiv.googlecode.com/svn/trunk/html5.js" }
    <![endif]-->